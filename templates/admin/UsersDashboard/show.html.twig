{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset("CSS/adminindexCSS/style.css")}}">
{% endblock %}

{% block body %}
	<div class="mainContainer">
		<div class="container2">
			<h1 class="text-center m-2">User details</h1>

			<table class="tableUser">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ user.id }}</td>
					</tr>
					<tr>
						<th>Username</th>
						<td>{{ user.username }}</td>
					</tr>
					<tr>
						<th>Roles</th>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					</tr>
					<tr>
						<th>First_name</th>
						<td>{{ user.firstName }}</td>
					</tr>
					<tr>
						<th>Last_name</th>
						<td>{{ user.lastName }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Avatar</th>
						<td><img src="{{ user.avatar }}" alt="{{ user.firstName }}" style="height:50px; width:50px;"></td>
					</tr>
				</tbody>
			</table>
			{# <div class="d-flex justify-center"> #}
			<a class="btn btn-primary my-1" href="{{ path('app_admin_index') }}">Back to list</a>

			<a class="btn btn-warning my-1" href="{{ path('app_admin_edit', {'id': user.id}) }}">Edit</a>

			{{ include('admin/UsersDashboard/_delete_form.html.twig') }}
			{# </div> #}
		</div>
	</div>
{% endblock %}
