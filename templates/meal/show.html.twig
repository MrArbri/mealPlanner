{% extends 'base.html.twig' %}

{% block title %}Meal
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center m-2">Meal details</h1>

		<div class='p-2'>
			<div class='card h-100'>
				<img src={{ meal.picture }} class='card-img-top object-fit-cover' style='height:30rem;' alt={{ meal.name }}>
				<div class='card-body'>
					<h5 class='card-title'>Name:
						{{ meal.name }}</h5>
					<p class='card-text'>Ingredients:
						{{ meal.ingredients }}</p>
					<p class='card-text'>Description:
						{{ meal.description }}</p>
					<p class='card-text'>Preparation:
						{{ meal.preparation }}</p>
					<p class='card-text'>Prep time:
						{{ meal.prepTime ? meal.prepTime|date('H:i:s') : '' }}</p>
					{% if meal.creator %}
						<p class="card-text fw-semibold mt-3">{{ meal.creator.username }}</p>
					{% endif %}
					<p class='card-text'>Calories:
						{{ meal.calories }}</p>
					<p class='card-text'>Meal type:
						{{ meal.type }}
					</p>
					<p class='card-text'>Rating:
						{{ meal.rating }}</p>
					<div class='d-flex justify-content-start'>
						<a href="{{ path('app_meal_index') }}">back to list</a>
						<a href="{{ path('app_meal_edit', {'id': meal.id}) }}">edit</a>
						{{ include('meal/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
